{
  "name": "@inox-tools/inline-mod",
  "version": "2.1.1",
  "description": "Define a virtual module inline with any reference to buildtime values",
  "keywords": [
    "vite-plugin"
  ],
  "repository": "https://github.com/Fryuni/inox-tools.git",
  "license": "(MIT AND Apache-2.0)",
  "author": "Luiz Ferraz <luiz@lferraz.com>",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./vite": {
      "types": "./dist/vite.d.ts",
      "default": "./dist/vite.js"
    }
  },
  "files": [
    "README.md",
    "src",
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "prepublish": "pnpm run build",
    "test": "vitest run --coverage",
    "test:dev": "vitest --coverage.enabled=true"
  },
  "dependencies": {
    "@inox-tools/utils": "workspace:^",
    "debug": "catalog:",
    "typescript": "catalog:"
  },
  "devDependencies": {
    "@faker-js/faker": "catalog:",
    "@types/debug": "catalog:",
    "@vitest/coverage-v8": "catalog:",
    "@vitest/ui": "catalog:",
    "jest-extended": "catalog:",
    "tsup": "catalog:",
    "upath": "catalog:",
    "vitest": "catalog:"
  },
  "peerDependencies": {
    "vite": "catalog:min"
  },
  "peerDependenciesMeta": {
    "vite": {
      "optional": true
    }
  }
}
