    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/debug": "catalog:",
    "@types/node": "catalog:",
    "tsup": "catalog:",
    "typescript": "catalog:",
    "vite": "catalog:",
    "vitest": "catalog:"
  }
}
