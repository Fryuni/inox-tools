{
  "name": "@inox-tools/astro-tests",
  "version": "0.4.0",
  "description": "Utilities for testing your own Astro integrations and libraries based on Astro's own testing tools",
  "keywords": [
    "withastro",
    "utils",
    "tests"
  ],
  "license": "MIT",
  "author": "Luiz Ferraz <luiz@lferraz.com>",
