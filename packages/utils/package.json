{
  "name": "@inox-tools/utils",
  "version": "0.1.1",
  "description": "A collection of utilities used throughout Inox Tools",
  "keywords": [
    "utilities"
  ],
  "license": "MIT",
  "author": "Luiz Ferraz <luiz@lferraz.com>",
  "type": "module",
  "exports": {
    "./*": {
      "types": "./dist/*.d.ts",
      "default": "./dist/*.js"
    }
  },
  "files": [
    "README.md",
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "prepublish": "pnpm run build",
    "test": "vitest run --coverage",
    "test:dev": "vitest --coverage.enabled=true"
  },
  "devDependencies": {
    "@types/node": "^20.14.2",
    "@vitest/coverage-v8": "^1.6.0",
    "@vitest/ui": "^1.6.0",
    "astro": "^4.9.3",
    "jest-extended": "^4.0.2",
    "tsup": "^8.1.0",
    "typescript": "^5",
    "vite": "^5.2.12",
    "vitest": "^1.6.0"
  }
}
