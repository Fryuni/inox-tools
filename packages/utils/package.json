{
  "name": "@inox-tools/utils",
  "version": "0.3.0",
  "description": "A collection of utilities used throughout Inox Tools",
  "keywords": [
    "utilities"
  ],
  "license": "MIT",
  "author": "Luiz Ferraz <luiz@lferraz.com>",
  "type": "module",
  "exports": {
    "./*": {
      "types": "./dist/*.d.ts",
      "default": "./dist/*.js"
    }
  },
  "files": [
    "README.md",
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "prepublish": "pnpm run build",
    "test": "vitest run --coverage",
    "test:dev": "vitest --coverage.enabled=true"
  },
  "devDependencies": {
    "@types/hast": "^3.0.4",
    "@types/mdast": "^4.0.4",
    "@types/node": "catalog:",
    "@types/unist": "^3.0.3",
    "@types/xast": "^2.0.4",
    "@vitest/coverage-v8": "catalog:",
    "@vitest/ui": "catalog:",
    "astro": "catalog:",
    "jest-extended": "catalog:",
    "mdast-util-from-markdown": "^2.0.2",
    "tsup": "catalog:",
    "typescript": "catalog:",
    "unist-util-is": "^6.0.0",
    "vite": "^6.0.11",
    "vitest": "catalog:"
  }
}
